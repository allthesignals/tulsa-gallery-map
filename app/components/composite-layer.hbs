<@map.source
  @options={{@sourceOptions}} as |source|
>
  <source.layer
    @layer={{@layerOptions}}
    as |layer|
  >
    {{yield (hash
      layer=layer
      source=source
      tooltip=(component 'hoverable-layer'
        map=@map
        layerId=layer.id
        sourceId=source.id
      ))
    }}
  </source.layer>
</@map.source>
